<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="FormsSample.NextPage"
             Title="Next page">
    <ContentPage.Content>

        <Grid VerticalOptions="FillAndExpand" x:Name="grid">
          <Grid.RowDefinitions>

            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="auto" />

          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>


            <Button Clicked="Handle_Clicked" Text="Get data" Grid.Column="0" Grid.Row="0"></Button>
            <Label x:Name="dataLabel" Text="I am the next page" Grid.Column="0" Grid.Row="1"></Label>
            
        </Grid>

    </ContentPage.Content>
</ContentPage>
